    <script>
      // Make all dashboard buttons role-aware and persist role for the form navbar
      (function () {
        function withRole(url) {
          const role = userIsStaff() ? "staff" : "partner";
          const u = new URL(url, location.href);
          u.searchParams.set("role", role);
          if (role === "staff") u.searchParams.set("staff", "true"); // keep your staff-only reveals
          return u.pathname + u.search;
        }

        document.querySelectorAll(".buttons a.button").forEach((a) => {
          const raw = a.getAttribute("href");
          if (!raw) return;
          a.setAttribute("href", withRole(raw));
          a.addEventListener("click", () => {
            try {
              localStorage.setItem(
                "eskala_role",
                userIsStaff() ? "STAFF" : "PARTNER"
              );
            } catch {}
          });
        });
      })();
    </script>

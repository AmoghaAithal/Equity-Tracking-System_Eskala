      // ---------- Staff-only reveal ----------
      function userIsStaff() {
        if (qpRole && /staff/i.test(qpRole)) return true;

        try {
          const u = JSON.parse(localStorage.getItem("eskala_user") || "{}");
          if ((u.role || "").toUpperCase() === "STAFF") return true;
        } catch (_) {}

        return false;
      }

      if (userIsStaff()) {
        els.ivlBlock.style.display = "flex";
        els.adminBlock.style.display = "flex";
